#!/usr/bin/env bash
# This script configures Nginx on a new Ubuntu machine to add a custom HTTP response header.

# Install Nginx
sudo apt-get update
sudo apt-get -y install nginx

# Get the hostname of the server
hostname=$(hostname)

# Configure Nginx to add custom HTTP response header
config_content=$(cat <<EOL
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    add_header X-Served-By $hostname;

    location / {
        root /var/www/html;
        index index.html index.htm;
    }
}
EOL
)

# Create a new Nginx configuration file
echo "$config_content" | sudo tee /etc/nginx/sites-available/default > /dev/null

# Restart Nginx to apply changes
sudo service nginx restart

# Exit with success
exit 0
